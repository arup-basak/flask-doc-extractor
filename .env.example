# Flask Application Configuration
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# Flask Settings
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_DEBUG=True
PORT=8080

# Database Configuration
# PostgreSQL (default)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/invoices
# Alternative: Use POSTGRES_URL
# POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/invoices
# For SQLite (development fallback):
# DATABASE_URL=sqlite:///invoices.db

# SQLAlchemy Settings
SQLALCHEMY_ECHO=False

# File Upload Settings
UPLOAD_FOLDER=uploads
# Maximum file size in bytes (16MB default)
# MAX_CONTENT_LENGTH=16777216

# Storage Configuration
# Set to 'true' to use Cloudflare R2, 'false' for local storage
USE_R2_STORAGE=false

# Cloudflare R2 Configuration (S3-compatible)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
# Optional: Custom domain for public URLs (e.g., https://files.yourdomain.com)
R2_PUBLIC_URL=
# Presigned URL expiration time in seconds (default: 3600 = 1 hour)
R2_PRESIGNED_URL_EXPIRATION=3600

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
# Model to use for extraction (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Example configurations for different environments:

# Development (Local PostgreSQL)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/invoices
# USE_R2_STORAGE=false
# FLASK_DEBUG=True

# Production (with R2 and PostgreSQL)
# DATABASE_URL=postgresql://user:password@db-host:5432/invoices
# USE_R2_STORAGE=true
# FLASK_DEBUG=False
# SECRET_KEY=<generate-strong-random-key>
